<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_chat_received"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/received_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/boy" />

    <com.github.library.bubbleview.BubbleTextView
        android:id="@+id/received_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_toEndOf="@+id/received_image"
        android:layout_toRightOf="@+id/received_image"
        android:padding="10dp"
        android:text="Hello BubbleTextVew Hello BubbleTextVew Hello BubbleTextVew Hello BubbleTextVew Hello BubbleTextVew Hello BubbleTextVew "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:angle="15dp"
        app:arrowCenter="false"
        app:arrowHeight="10dp"
        app:arrowLocation="left"
        app:arrowPosition="15dp"
        app:arrowWidth="8dp"
        app:bubbleColor="@color/lighterGrey" />

</RelativeLayout>