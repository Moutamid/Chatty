<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- LEFT MESSAGE-->
    <RelativeLayout
        android:id="@+id/leftTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingEnd="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="60dp"
        android:paddingStart="15dp"
        android:paddingVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/chatty_girl" />

        <TextView
            android:id="@+id/leftText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:paddingBottom="4dp"
            android:text="Chatty" />

        <TextView
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/leftText1"
            android:layout_alignStart="@+id/leftText1"
            android:layout_below="@+id/leftText1"
            android:background="@drawable/left_background"
            android:elevation="2dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:text="How are you doing?"
            android:textSize="18sp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rightTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/right_background"
            android:elevation="2dp"
            android:padding="8dp"
            android:text="Hi!! How are you!!"
            android:textColor="#fff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white" />

    </LinearLayout>


</RelativeLayout>