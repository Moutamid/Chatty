<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_chats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_image_recycler_view"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:src="@drawable/chatty_girl" />


    <LinearLayout
        android:id="@+id/gradeSelectionBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/chat_image_recycler_view"
        android:layout_toRightOf="@id/chat_image_recycler_view"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/chat_name_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chatty"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chat_last_msg_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Kahan gye?Kahan gye?Kahan gye?Kahan gye?Kahan gye?Kahan gye?Kahan gye?"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/newMsgHighlighter"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:visibility="gone" />

</RelativeLayout>